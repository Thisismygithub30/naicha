page {
  height: 100%;
}
.cates {
  height: 100%;
}
.cates .cates_cotainer {
  height: calc( 100vh - 90rpx);
  display: flex;
}
.cates .cates_cotainer .left_menu {
  flex: 2;
}
.cates .cates_cotainer .left_menu .menu_item {
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 30rpx;
}
.cates .cates_cotainer .left_menu .active {
  color: var(--themeColor);
  border-left: 5rpx solid currentColor;
}
.cates .cates_cotainer .right_content {
  background-color: #F5F5F5;
  flex: 5;
}
