<view class="cates">

    <!-- 搜索框 -->
    <SearchInput></SearchInput>
    <!-- 搜索框 -->
    <!-- 创建本页的两个滑动区域容器 -->
    <view class="cates_cotainer">
        <!-- 左侧菜单滑动视图 -->
        <scroll-view scroll-y class="left_menu">
            <!-- 三目预算 当前渲染的组件index===当前被选中的组件的currentindex时 加入active类样式 改变颜色 -->
            <view class="menu_item {{index===currentIndex?'active':''}}" 
                  
                  wx:for="{{leftMenuList}}"
                  wx:key="*this"

                  bindtap="handleItemTap"
                  data-lcindex="{{index}}"
            >
            <!-- data-lcindex为自定义属性 会包含在event的type.currentTarget.dataset中 -->
            <!-- *this,以item自身为key -->
                {{item}}
            </view>

        </scroll-view>
        <!-- 右侧菜单滑动视图 -->
        <scroll-view scroll-y scroll-top="{{scrollTop}}" class="right_content">
            <!-- 右侧单页大组件 一个里面含有多个group 循环加载-->
            <view class="goods_group"
                  wx:for="{{rightContentList}}"
                  wx:for-index="index1"
                  wx:for-item="item1"   
            >
                <!-- 右侧大分类（group）标题 循环加载大标题 -->
                <!-- <view class="goods_title">
                    <text class="delimiter">/</text>
                    <text class="title">{{item1.cat_name}}</text>
                    <text class="delimiter">/</text>

                </view> -->
                <!-- 右侧分类（group）内容 -->
                
                    <!-- <navigator 
                        wx:for="{{item1.children}}"
                        wx:for-item="item2"
                        wx:for-index="index2"
                        wx:key="cat_id"
                        url="/pages/goods_list/index?cid={{item2.cat_id}}"
                    >
                        <image src="{{item2.cat_icon}}" mode="widthFix">
                            {{item2.cat_name}}
                        </image>
                        <view class="goods_name">{{item2.cat_name}}</view>
                    </navigator>
                    
                    wx:for="{{goodsList}}"
                        wx:key="goods_id" 
                     -->
                    <navigator class="goods_item" 
                        
                        
                        url="/pages/goods_detail/index?goods_id={{item1.id}}"
                    >
                <!-- 左侧图片结构 -->
                        <view class="goods_img_wrap">
                            <image src="{{item1.picture?item1.picture:'https://timgsa.baidu.com/timg?image&quality=80&size=b9999_10000&sec=1590402340220&di=088860eb4bc6f9845afc55116286c76b&imgtype=0&src=http%3A%2F%2Fku.90sjimg.com%2Felement_origin_min_pic%2F16%2F08%2F26%2F1957c0226aaca58.jpg%2521%2Ffwfh%2F804x1005%2Fquality%2F90%2Funsharp%2Ftrue%2Fcompress%2Ftrue'}}" mode="widthFix" />
                      
                        </view>
                <!-- 右侧商品内容结构 -->
                        <view class="goods_info_wrap">
                            <view class="goods_name">
                                {{item1.productname}}
                            </view>
                            <view class="goods_price">
                                {{item1.firstprice}}
                            </view>
                        </view>
                    </navigator>
                      
                
            </view>
        </scroll-view>

    </view>


    
</view> 
    
    
    



